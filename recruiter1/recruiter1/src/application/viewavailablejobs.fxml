    </ListView>

    <Button fx:id="backButton" layoutX="250.0" layoutY="360.0" text="Back" onAction="#switchtomenu" />

    <!-- ComboBox for job IDs -->
    <ComboBox fx:id="jobIdComboBox" layoutX="100.0" layoutY="296.0" prefWidth="150.0" promptText="job ids" />

     <Button fx:id="applyButton" layoutX="366.0" layoutY="296.0" mnemonicParsing="false" text="Apply!" onAction="#applyForJob" />
