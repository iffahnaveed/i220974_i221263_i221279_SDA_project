<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="recievemessagerecruiter" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f1948a;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Applicant_scenecontroller">

    <!-- Label for Dropdown -->
    <Label layoutX="20.0" layoutY="20.0" text="Select Recruiter ID:" />

    <!-- Dropdown for HR IDs -->
    <ComboBox fx:id="recruiterIdComboBox" layoutX="120.0" layoutY="15.0" prefWidth="200.0" />

    <!-- Button to refresh HR IDs -->
    <Button fx:id="refreshButton" layoutX="518.0" layoutY="58.0" onAction="#handleLoadJobId" text="Load" />

    <!-- Label for Messages -->
    <Label layoutX="20.0" layoutY="70.0" text="Messages from HR:" />

    <!-- Text Area for displaying HR messages -->
    <TextArea fx:id="messageArea" editable="false" layoutX="20.0" layoutY="100.0" prefHeight="250.0" prefWidth="560.0" wrapText="true" />
   <ComboBox fx:id="applicationIdComboBox" layoutX="443.0" layoutY="16.0" prefWidth="150.0" />
   <Label layoutX="329.0" layoutY="20.0" text="Select application id" />
   <Button layoutX="267.0" layoutY="58.0" mnemonicParsing="false" onAction="#handleReceiveRecruiterMessage" text="Recieve message" />
   <Button layoutX="274.0" layoutY="361.0" mnemonicParsing="false" text="Back" onAction="#switchtomenu"  />
</AnchorPane>